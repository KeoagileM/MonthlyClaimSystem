<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<!-- COMPLETELY DISABLE STATIC WEB ASSETS -->
		<StaticWebAssetsEnabled>false</StaticWebAssetsEnabled>
		<EnableDefaultContentItems>false</EnableDefaultContentItems>
	</PropertyGroup>

	<ItemGroup>
		<!-- Manually include ONLY the files we need -->
		<Content Include="wwwroot\css\site.css">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Include="Controllers\**\*.cs" />
		<Content Include="Models\**\*.cs" />
		<Content Include="Services\**\*.cs" />
		<Content Include="Views\**\*" />
		<Content Include="Program.cs" />
		<Content Include="appsettings.json" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="Microsoft.Data.SqlClient" Version="6.1.3" />
	  <PackageReference Include="System.Data.SqlClient" Version="4.9.0" />
	</ItemGroup>

</Project>