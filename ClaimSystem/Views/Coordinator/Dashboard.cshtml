@model IEnumerable<ClaimSystem.Models.Claim>
@{
    ViewBag.Title = "Programme Coordinator Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="~/css/site.css">
}

<h2>Programme Coordinator Dashboard</h2>

<div class="card gradient-card">
    <h3>Claims Review</h3>
    <table>
        <thead>
            <tr>
                <th>Employee No.</th>
                <th>Lecturer Name</th>
                <th>Module</th>
                <th>Date</th>
                <th>Rate</th>
                <th>Hours</th>
                <th>Total</th>
                <th>Status</th>
                <th>Document</th>
                <th>Rejection Reason</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.EmployeeNumber</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.Module</td>
                    <td>@claim.DateSubmitted.ToShortDateString()</td>
                    <td>@claim.HourlyRate</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.TotalAmount</td>
                    <td>
                        <span class="status @claim.Status.ToLower().Replace(" ", "-")">@claim.Status</span>
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.DocumentPath))
                        {
                            <a href="@claim.DocumentPath" target="_blank">View Document</a>
                        }
                        else
                        {
                            <em>No document</em>
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.RejectionReason))
                        {
                            <em>@claim.RejectionReason</em>
                        }
                    </td>
                    <td>
                        @if (claim.Status == "Pending")
                        {
                            using (Html.BeginForm("Approve", "Coordinator", FormMethod.Post))
                            {
                                @Html.Hidden("id", claim.Id)
                                <button type="submit">Approve</button>
                            }

                            <form asp-action="Disapprove" asp-controller="Coordinator" method="post" style="margin-top:8px;">
                                <input type="hidden" name="id" value="@claim.Id" />
                                <textarea name="rejectionReason" placeholder="Reason..." rows="2" style="width:150px;"></textarea><br />
                                <button type="submit" class="warning">Disapprove</button>
                            </form>
                        }
                        else
                        {
                            <em>Reviewed</em>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
