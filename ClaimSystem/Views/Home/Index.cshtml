@{
    ViewBag.Title = "Welcome - CMCS";
}

<div class="home">
    <h1>Welcome to the Contract Monthly Claim System (CMCS)</h1>
    <p>Select your role to continue:</p>

    <div class="role-cards">
        <a href="@Url.Action("Dashboard","Lecture")" class="card lecturer">
            <h2>Lecturer</h2>
