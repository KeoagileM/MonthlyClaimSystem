@{
    ViewData["Title"] = "Home";
}

<div class="home">
    <div class="hero-section">
        <h1>Welcome to the Claim Management System</h1>
        <p>Streamline your academic payment claims with our secure platform</p>
    </div>

    <div class="role-section" id="role-section">
        <h2>Select Your Role to Continue</h2>
        <div class="role-cards">
            <a href="/Home/Login?role=Lecturer" class="card lecturer">
                <div class="card-icon"></div>
                <h2>Lecturer</h2>
                <p>Submit and track your monthly claims</p>
                <div class="card-arrow">→</div>
            </a>

            <a href="/Home/Login?role=Coordinator" class="card coordinator">
                <div class="card-icon"></div>
                <h2>Programme Coordinator</h2>
                <p>Review and verify lecturer claims</p>
                <div class="card-arrow">→</div>
            </a>

            <a href="/Home/Login?role=Manager" class="card manager">
                <div class="card-icon"></div>
                <h2>Programme Manager</h2>
                <p>Final approval and payment processing</p>
                <div class="card-arrow">→</div>
            </a>

            <a href="/Home/Login?role=HR" class="card" style="border-left: 4px solid #8b5cf6;">
                <div class="card-icon"></div>
                <h2>Human Resources</h2>
                <p>Automated claim processing and lecturer management</p>
                <div class="card-arrow">→</div>
            </a>
        </div>
    </div>
</div>