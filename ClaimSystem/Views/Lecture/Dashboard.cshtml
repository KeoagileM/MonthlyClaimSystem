@model IEnumerable<ClaimSystem.Models.Claim>
@{
    ViewBag.Title = "Lecturer Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lecturer Dashboard</h2>

<!-- Quick Submit Form -->
@using (Html.BeginForm("SubmitClaim", "Lecture", FormMethod.Post))
{
    <div class="card gradient-card form-stack">
        <h3>Quick Submit</h3>

        <div class="form-group">
            <label>Hours Worked</label>
            <input type="number" name="HoursWorked" required />
        </div>

        <div class="form-group">
            <label>Hourly Rate</label>
            <input type="number" step="0.01" name="HourlyRate" required />
        </div>

        <div class="form-group">
            <label>Document Name / Description</label>
            <input type="file" name="DocumentPath" placeholder="Timesheet.pdf" />
        </div>

        <button type="submit" class="full-btn">Submit Claim</button>
    </div>
}

<!-- Claim History -->
<div class="card gradient-card">
    <h3>Claim History</h3>
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Status</th>
                <th>Document</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.DateSubmitted.ToShortDateString()</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate</td>
                        <td><span class="status @claim.Status.ToLower()">@claim.Status</span></td>
                        <td>@claim.DocumentPath</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="5">No claims submitted yet</td></tr>
            }
        </tbody>
    </table>
</div>
