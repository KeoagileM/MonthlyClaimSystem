@model IEnumerable<ClaimSystem.Models.Claim>
@{
    ViewBag.Title = "Manager Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manager - All Claims</h2>

<div class="card">
    <h3>Claims</h3>
    <table>
        <thead>
            <tr>
                <th>Employee No.</th>
                <th>Lecturer Name</th>
                <th>Module</th>
                <th>Date</th>
                <th>Rate</th>
                <th>Hours</th>
                <th>Total</th>
                <th>Status</th>
                <th>Document</th>
                <th>Rejection Reason</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.EmployeeNumber</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.Module</td>
                    <td>@claim.DateSubmitted.ToShortDateString()</td>
                    <td>@String.Format("{0:C}", claim.HourlyRate)</td>
                    <td>@claim.HoursWorked</td>
                    <td>@String.Format("{0:C}", claim.TotalAmount)</td>
                    <td><span class="status @claim.Status.ToLower().Replace(" ", "-")">@claim.Status</span></td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.DocumentPath))
                        {
                            <a href="@claim.DocumentPath" target="_blank">View</a>
                        }
                        else
                        {

                            <em>No document</em>
                        }
                    </td>
                    <td>@(string.IsNullOrEmpty(claim.RejectionReason) ? "-" : claim.RejectionReason)</td>
                    <td>
                        @if (claim.Status == "Coordinator Approved")
                        {
                            <form asp-action="Accept" asp-controller="Manager" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@claim.Id" />
                                <button type="submit">Accept</button>
                            </form>
                            <form asp-action="Reject" asp-controller="Manager" method="post" style="display:inline;margin-left:8px;">
                                <input type="hidden" name="id" value="@claim.Id" />
                                <button type="submit" class="danger" style="background:red;">Reject</button>
                            </form>
                        }
                        else if (claim.Status == "Coordinator Disapproved")
                        {
                            <form asp-action="Reject" asp-controller="Manager" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@claim.Id" />
                                <button type="submit" class="danger" style="background:red;">Reject</button>
                            </form>
                        }
                        else
                        {
                            <em>Finalized</em>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="card" style="margin-top:16px;">
    <h3>Total Accepted Value</h3>
    <p><strong>@String.Format("{0:C}", ViewBag.TotalAccepted ?? 0M)</strong></p>
</div>
