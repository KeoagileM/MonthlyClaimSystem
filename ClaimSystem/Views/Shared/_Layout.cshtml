@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var role = HttpContextAccessor.HttpContext?.Session.GetString("Role");
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
    var firstName = HttpContextAccessor.HttpContext?.Session.GetString("FirstName");
    var lastName = HttpContextAccessor.HttpContext?.Session.GetString("LastName");
    var displayName = !string.IsNullOrEmpty(firstName) && !string.IsNullOrEmpty(lastName)
        ? $"{firstName} {lastName}"
        : username;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Claim Management System</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="navbar">
            <div class="logo">
                <h1>Contract Monthly Claim System</h1>
            </div>
            <nav>
                <a asp-controller="Home" asp-action="Index">Home</a>
                @if (!string.IsNullOrEmpty(role))
                {
                    <span class="role-badge">@displayName (@role)</span>
                    <a asp-controller="Home" asp-action="Logout" class="logout-btn">Logout</a>
                }
                else
                {
                    <a asp-controller="Home" asp-action="Register" class="btn-secondary">Register</a>
                }
            </nav>
        </div>
    </header>

    <main class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-error">
                @TempData["ErrorMessage"]
            </div>
        }

        @RenderBody()
    </main>

    <footer>
        <p>&copy; @DateTime.Now.Year - Contract Monthly Claim System</p>
    </footer>
</body>
</html>