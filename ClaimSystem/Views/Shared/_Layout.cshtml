@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var role = HttpContextAccessor.HttpContext.Session.GetString("Role");
    <link rel="stylesheet" href="~/css/site.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Claim Management System</title>
    <link rel="stylesheet" href="~/Content/site.css" />
</head>
<body>
    <header>
        <div class="navbar">
            <div class="logo">
                <h1>CMCS</h1>
            </div>
            <nav>
                <a asp-controller="Home" asp-action="Index">Home</a>
                @if (!string.IsNullOrEmpty(role))
                {
                    <span style="margin-left:12px;">Logged in as @role</span>
                    <a asp-controller="Home" asp-action="Logout" style="margin-left:20px;">
                        <i class="bi bi-house"></i>
                        Logout
                    </a>
                }
            </nav>
        </div>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer>
        <p>&copy; @DateTime.Now.Year - Claim Management System</p>
    </footer>
</body>
</html>
