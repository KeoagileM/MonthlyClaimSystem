@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var role = HttpContextAccessor.HttpContext?.Session.GetString("Role");
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - CMCS</title>
    <link rel="stylesheet" href="~/Content/site.css" />
</head>
<body>
    <header>
        <div class="navbar">
            <div class="logo">
                <h1>CMCS</h1>
            </div>
            <nav>
                <a asp-controller="Home" asp-action="Index">Home</a>
                @if (!string.IsNullOrEmpty(role))
                {
                    <span class="role-badge">Logged in as @role (@username)</span>
                    <a asp-controller="Home" asp-action="Logout" style="margin-left:12px;">Logout</a>
                }
            </nav>
        </div>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer>
        <p>&copy; @DateTime.Now.Year - Contract Monthly Claim System</p>
    </footer>
</body>
</html>
