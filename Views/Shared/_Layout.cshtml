@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var role = HttpContextAccessor.HttpContext?.Session.GetString("Role");
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Assignment Tracker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/wwwroot/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
</head>
<body>
    <header class="app-header">
        <div class="container">
            <div class="d-flex align-items-center justify-content-between py-3">
                <div>
                    <h1 class="app-title">Assignment Tracker</h1>
                    <p class="text-muted small">Stay on top of your assignments and never miss a deadline</p>
                </div>
                <nav class="nav nav-pills">
                    <a class="nav-link active" href="#">Dashboard</a>
                    <a class="nav-link" href="#">Calendar</a>
                    <a class="nav-link" href="#">+ Assignments</a>
                    <a class="nav-link" href="#">Modules</a>
                    <a class="nav-link" href="#">Achievements</a>
                    <a class="nav-link position-relative" href="#">Notifications <span class="badge bg-danger">2</span></a>
                    <a class="nav-link" href="#">Settings</a>
                </nav>
            </div>
        </div>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="text-center py-4">
        <p class="text-muted small">&copy; @DateTime.Now.Year - Assignment Tracker</p>
    </footer>

    <script src="~/wwwroot/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/wwwroot/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
